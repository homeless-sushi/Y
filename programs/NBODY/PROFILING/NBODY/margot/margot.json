{
    "name": "NBODY_Profiling",
    "version": "0.1",
    "blocks":
    [
        {
            "name": "nbody",

            "monitors":
            [
                {
                    "name": "time_monitor",
                    "type": "time",
                    "log": [ "average" ],
                    "constructor": [ "margot::TimeUnit::MICROSECONDS", 1 ]
                }
            ],


            "knobs":
            [
                {
                    "name": "DEVICE_TYPE",
                    "type": "unsigned int",
                    "range": [ 0, 2, 1 ]
                },
                {
                    "name": "CPU_THREADS",
                    "type": "unsigned int",
                    "range": [ 1, 21, 1 ]
                },
                {
                    "name": "GPU_BLOCK_EXP",
                    "type": "unsigned int",
                    "range": [0, 5, 1]
                },
                {
                    "name": "PRECISION",
                    "type": "unsigned int",
                    "range": [1, 101, 1]
                }
            ],

            "agora":
            {
                "broker_url": "127.0.0.1:1883",
                "broker_username": "agora",
                "broker_password": "agora",
                "broker_qos": 2,
                "broker_ca": "",
                "client_cert": "",
                "client_key": "",
                "number_configurations_per_iteration": 20000,
                "number_observations_per_configuration": 1,
                "max_number_iteration": 10,
                "clustering_plugin": "cluster",
                "clustering_parameters":
                [
                    {"algorithm": "kmeans"},
                      {"num_clusters":1}
                ],
                "doe_plugin": "doe",
                "doe_parameters":
                [
                    {"algorithm": "full-factorial"}
                ]
            },

            "metrics":
            [
                {
                    "name": "timing",
                    "type": "float",
                    "distribution": "yes",
                    "observed_by": "time_monitor",
                    "reactive_inertia": 0,
                      "prediction_plugin": "model",
                      "prediction_parameters": 
                    [
                        {
                              "quality_threshold": "{'r2':0.8}"
                        }
                      ]
                }
            ],

            "extra-functional_requirements":
            [
                {
                    "name":"default",
                    "minimize":
                    {
                        "geometric_mean":
                        [
                            {"timing": 1}
                        ]
                    }
                }
            ]
        }
    ]
}
